<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Hortalis</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&family=Raleway:wght@600;700&display=swap"
        rel="stylesheet">
    <!-- Icones -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

</head>

<body class="d-flex flex-column min-vh-100">

    <!-- Header 
        TODO: Modal de Perfil, se o usuário estiver autenticado, o ícone de usuário deve abrir o modal. 
        NOTA: Esse modal já está implementado, mas está comentado no final do arquivo, Falta apenas a lógica para abrir o modal.

    -->
    <header class="shadow-sm fixed-top" style="background-color:#007C46;">
        <nav class="navbar navbar-expand-lg navbar-light container">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <img src="~/Logo_Branca.svg" alt="Hortalis Logo" width="160" class="me-2" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-label="Alternar navegação" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" style="color: #fff;" href="/Home/Index">Início</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #fff;" href="/Home/Index#sobre">Sobre</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #fff;" href="/Home/Index#mapa">Mapa</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #fff;" href="/Home/Index#contato">Indicar Horta</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #fff;" href="/Home/Tutoriais">Tutoriais</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" style="color: #fff;" href="/Home/Autores">Autores</a></li>

                    @if (User?.Identity?.IsAuthenticated == true && (User.IsInRole("Gerente") || User.IsInRole("Administrador")))
                    {
                        <li class="nav-item">
                            <a class="nav-link" style="color: #fff;" href="/Hortas" title="Gerenciar Hortas">Gerenciar Hortas</a>
                        </li>
                    }

                    @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" style="color: #fff;" href="/Admin/Relatorios">Relatórios</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" style="color: #fff;" href="/Login/Conta" title="Conta">
                            <i class="bi bi-person-circle" style="font-size: 1.2rem;"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="pt-5 flex-grow-1">
        @RenderBody()
    </main>

    @if (!(ViewData["HideFooter"] as bool? == true))
    {
        <!-- Footer -->
        <footer class="text-light py-5 mt-5" style="background-color:#007C46;">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5>Sobre o Hortalis</h5>
                        <p>Conectamos pessoas a hortas comunitárias para promover alimentação saudável, sustentabilidade e
                            integração social.</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Links Rápidos</h5>
                        <ul class="list-unstyled">
                            <li><a href="/Home/Index" class="text-light text-decoration-none link-hover">Início</a></li>
                            <li><a href="/Home/Index#faq" class="text-light text-decoration-none link-hover">Dúvidas</a></li>
                            <li><a href="/Home/Index#mapa" class="text-light text-decoration-none link-hover">Mapa</a></li>
                            <li><a href="/Home/Index#contato" class="text-light text-decoration-none link-hover">Contato</a></li>
                            <li><a href="/Login/Index" class="text-light text-decoration-none link-hover">Login</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h5>Contato</h5>
                        <p>(16) 9 9268-8721</p>
                        <p>suporte@hortalis.com.br</p>
                        <p>Matão, SP - Brasil</p>
                    </div>
                </div>
            </div>
        </footer>
    }     

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>
