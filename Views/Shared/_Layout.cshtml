<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Hortalis</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&family=Raleway:wght@600;700&display=swap" rel="stylesheet">
    <!-- Icones -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>

    <!-- Header -->
    <header class="shadow-sm fixed-top" style="background-color:#007C46;">
        <nav class="navbar navbar-expand-lg navbar-light container">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <img src="~/Logo_Branca.svg" alt="Hortalis Logo" width="160" class="me-2" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" style="color: #fff;" href="Index">Início</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #fff;" href="#sobre">Sobre</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #fff;" href="#mapa">Mapa</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #fff;" href="#contato">Indicar Horta</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #fff;" href="/Home/Tutoriais">Tutoriais</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #fff;" href="/Home/Autores">Autores</a></li>
                </ul>
            </div>
        </nav>
    </header>
        
    <main class="pt-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-light py-5 mt-5" style="background-color:#007C46;">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>Sobre o Hortalis</h5>
                    <p>Conectamos pessoas a hortas comunitárias para promover alimentação saudável, sustentabilidade e integração social.</p>
                </div>
                <div class="col-md-4">
                    <h5>Links Rápidos</h5>
                    <ul class="list-unstyled">
                        <li><a href="#inicio" class="text-light text-decoration-none link-hover">Início</a></li>
                        <li><a href="#faq" class="text-light text-decoration-none link-hover">Dúvidas</a></li>
                        <li><a href="#mapa" class="text-light text-decoration-none link-hover">Mapa</a></li>
                        <li><a href="#contato" class="text-light text-decoration-none link-hover">Contato</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Contato</h5>
                    <p>(16) 9 9268-8721</p>
                    <p>suporte@hortalis.com.br</p>
                    <p>Matão, SP - Brasil</p>
                </div>
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="~/js/script.js" type="module"></script>

</body>
</html>
