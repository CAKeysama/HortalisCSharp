@page
@model HortalisCSharp.Pages.Hortas.CreateModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Nova Horta";
    ViewData["HideFooter"] = true;
}

<div class="container py-4">
    <h2 class="fw-bold mb-3">Nova Horta</h2>
    <form method="post">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Input.Nome" class="form-label"></label>
                <input asp-for="Input.Nome" class="form-control" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Input.Latitude" class="form-label"></label>
                <input asp-for="Input.Latitude" class="form-control" />
                <span asp-validation-for="Input.Latitude" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Input.Longitude" class="form-label"></label>
                <input asp-for="Input.Longitude" class="form-control" />
                <span asp-validation-for="Input.Longitude" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Input.Descricao" class="form-label"></label>
                <textarea asp-for="Input.Descricao" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Input.Descricao" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Input.Produtos" class="form-label"></label>
                <input asp-for="Input.Produtos" class="form-control" placeholder="Ex: alface,tomate,couve" />
                <span asp-validation-for="Input.Produtos" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Input.Foto" class="form-label"></label>
                <input asp-for="Input.Foto" class="form-control" placeholder="URL da foto" />
                <span asp-validation-for="Input.Foto" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Input.Telefone" class="form-label"></label>
                <input asp-for="Input.Telefone" class="form-control" />
                <span asp-validation-for="Input.Telefone" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-4 d-flex gap-2">
            <button class="btn btn-success" type="submit">
                <i class="bi bi-check-lg me-1"></i> Salvar
            </button>
            <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}