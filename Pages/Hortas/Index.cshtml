@page
@model HortalisCSharp.Pages.Hortas.IndexModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Gerenciar Hortas";
    ViewData["HideFooter"] = true;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Gerenciar Hortas</h2>
        @if (Model.PodeCriar)
        {
            <a asp-page="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Nova Horta
            </a>
        }
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Mensagem))
    {
        <div class="alert alert-info">@Model.Mensagem</div>
    }

    @if (Model.Hortas?.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Localização</th>
                        <th>Produtos</th>
                        <th>Criado Em</th>
                        <th>Dono</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var h in Model.Hortas)
                {
                    <tr>
                        <td>@h.Nome</td>
                        <td>@h.Latitude.ToString("F5"), @h.Longitude.ToString("F5")</td>
                        <td>@h.Produtos</td>
                        <td>@h.CriadoEm.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@(h.Usuario?.Nome ?? "-")</td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a asp-page="Edit" asp-route-id="@h.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-page="Delete" asp-route-id="@h.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-secondary">
            Nenhuma horta encontrada para gerenciamento.
        </div>
    }
</div>